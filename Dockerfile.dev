# Dockerfile para ambiente de desenvolvimento
ARG RUBY_VERSION=3.4.7
FROM docker.io/library/ruby:$RUBY_VERSION-slim

# Instalar dependências do sistema necessárias para desenvolvimento
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    curl \
    git \
    libjemalloc2 \
    libvips \
    libyaml-dev \
    pkg-config \
    sqlite3 \
    vim \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Diretório de trabalho
WORKDIR /rails

# Configurar ambiente de desenvolvimento
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle" \
    BUNDLE_WITHOUT=""

# Copiar Gemfile e instalar gems
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copiar o código da aplicação
COPY . .

# Copiar e configurar o script de entrypoint
COPY docker-entrypoint-dev.sh /usr/local/bin/docker-entrypoint-dev
RUN chmod +x /usr/local/bin/docker-entrypoint-dev

# Expor porta para o servidor Rails
EXPOSE 3000

ENTRYPOINT ["docker-entrypoint-dev"]

# Iniciar servidor Rails em modo desenvolvimento
CMD ["bin/rails", "server", "-b", "0.0.0.0"]
