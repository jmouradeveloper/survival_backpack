<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Histórico de Rotações FIFO</h1>
  </div>

  <!-- Estatísticas -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-blue-50 rounded-lg p-4 text-center">
      <p class="text-sm text-gray-600 mb-1">Total de Rotações</p>
      <p class="text-2xl font-bold text-blue-600"><%= @statistics[:total_rotations] %></p>
    </div>
    
    <div class="bg-green-50 rounded-lg p-4 text-center">
      <p class="text-sm text-gray-600 mb-1">Consumo</p>
      <p class="text-2xl font-bold text-green-600">
        <%= number_with_precision(@statistics[:by_type][:consumption], precision: 2) %>
      </p>
    </div>
    
    <div class="bg-red-50 rounded-lg p-4 text-center">
      <p class="text-sm text-gray-600 mb-1">Descarte</p>
      <p class="text-2xl font-bold text-red-600">
        <%= number_with_precision(@statistics[:by_type][:waste], precision: 2) %>
      </p>
    </div>
    
    <div class="bg-purple-50 rounded-lg p-4 text-center">
      <p class="text-sm text-gray-600 mb-1">Taxa de Desperdício</p>
      <p class="text-2xl font-bold text-purple-600">
        <%= @statistics[:waste_percentage] %>%
      </p>
    </div>
  </div>

  <!-- Filtros -->
  <div class="bg-white rounded-lg shadow-md p-4 mb-6">
    <%= form_with url: supply_rotations_path, method: :get, 
                  data: { controller: "filters", turbo_frame: "rotations_list" } do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= f.label :food_item_id, "Alimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :food_item_id, 
                      options_for_select(
                        [["Todos", ""]] + FoodItem.order(:name).pluck(:name, :id),
                        params[:food_item_id]
                      ),
                      {},
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                      data: { action: "change->filters#submit" } %>
        </div>
        
        <div>
          <%= f.label :rotation_type, "Tipo", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :rotation_type,
                      options_for_select(
                        [
                          ["Todos", ""],
                          ["Consumo", "consumption"],
                          ["Descarte", "waste"],
                          ["Doação", "donation"],
                          ["Transferência", "transfer"]
                        ],
                        params[:rotation_type]
                      ),
                      {},
                      class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                      data: { action: "change->filters#submit" } %>
        </div>
        
        <div>
          <%= f.label :start_date, "Data Inicial", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :start_date,
                          value: params[:start_date],
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        
        <div>
          <%= f.label :end_date, "Data Final", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :end_date,
                          value: params[:end_date],
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>
      
      <div class="flex gap-3 mt-4">
        <%= f.submit "Filtrar", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition" %>
        <%= link_to "Limpar Filtros", supply_rotations_path, 
                    class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded transition",
                    data: { turbo_frame: "rotations_list" } %>
      </div>
    <% end %>
  </div>

  <!-- Lista de Rotações -->
  <%= turbo_frame_tag "rotations_list" do %>
    <div class="bg-white rounded-lg shadow-md">
      <% if @supply_rotations.any? %>
        <div class="divide-y divide-gray-200">
          <% @supply_rotations.each do |rotation| %>
            <%= turbo_frame_tag dom_id(rotation) do %>
              <div class="p-4 hover:bg-gray-50 transition">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-2 py-1 rounded text-xs font-semibold
                                   <%= case rotation.rotation_type
                                       when 'consumption'
                                         'bg-green-100 text-green-800'
                                       when 'waste'
                                         'bg-red-100 text-red-800'
                                       when 'donation'
                                         'bg-blue-100 text-blue-800'
                                       when 'transfer'
                                         'bg-purple-100 text-purple-800'
                                       end %>">
                        <%= rotation.rotation_type.humanize %>
                      </span>
                      
                      <p class="font-semibold text-gray-800">
                        <%= link_to rotation.food_item.name, food_item_path(rotation.food_item),
                                    class: "hover:text-blue-600" %>
                      </p>
                    </div>
                    
                    <p class="text-sm text-gray-600 mb-1">
                      <span class="font-semibold">Quantidade:</span>
                      <%= number_with_precision(rotation.quantity, precision: 2) %>
                    </p>
                    
                    <p class="text-sm text-gray-600 mb-1">
                      <span class="font-semibold">Data:</span>
                      <%= l(rotation.rotation_date, format: :long) %>
                    </p>
                    
                    <p class="text-sm text-gray-600 mb-1">
                      <span class="font-semibold">Lote:</span>
                      <%= link_to rotation.supply_batch.batch_code.presence || "Sem código",
                                  supply_batch_path(rotation.supply_batch),
                                  class: "text-blue-600 hover:text-blue-800" %>
                    </p>
                    
                    <% if rotation.reason.present? %>
                      <p class="text-sm text-gray-500 mt-2">
                        <span class="font-semibold">Motivo:</span> <%= rotation.reason %>
                      </p>
                    <% end %>
                    
                    <% if rotation.notes.present? %>
                      <p class="text-sm text-gray-500 mt-1">
                        <span class="font-semibold">Obs:</span> <%= rotation.notes %>
                      </p>
                    <% end %>
                  </div>
                  
                  <div class="flex gap-2">
                    <%= link_to "Ver", supply_rotation_path(rotation),
                                class: "text-blue-600 hover:text-blue-800 text-sm" %>
                    <%= link_to "Excluir", supply_rotation_path(rotation),
                                data: { 
                                  turbo_method: :delete,
                                  turbo_confirm: "Tem certeza?"
                                },
                                class: "text-red-600 hover:text-red-800 text-sm" %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Paginação -->
        <div class="p-4 border-t">
          <%== pagy_nav(@pagy) if defined?(@pagy) %>
        </div>
      <% else %>
        <div class="p-8 text-center text-gray-500">
          <p>Nenhuma rotação encontrada.</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

