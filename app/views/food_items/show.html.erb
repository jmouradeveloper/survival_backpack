<div class="container">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1><%= @food_item.name %></h1>
      <div>
        <%= link_to "Editar", edit_food_item_path(@food_item), class: "btn btn-primary" %>
        <%= link_to "Voltar", food_items_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">Categoria:</dt>
        <dd class="col-sm-9"><%= @food_item.category %></dd>

        <dt class="col-sm-3">Quantidade:</dt>
        <dd class="col-sm-9"><%= @food_item.quantity %></dd>

        <dt class="col-sm-3">Data de Validade:</dt>
        <dd class="col-sm-9">
          <%= @food_item.expiration_date ? l(@food_item.expiration_date) : "Não especificada" %>
          <% if @food_item.expired? %>
            <span class="badge bg-danger">Vencido</span>
          <% elsif @food_item.expiring_soon? %>
            <span class="badge bg-warning">Vence em breve</span>
          <% end %>
        </dd>

        <dt class="col-sm-3">Local de Armazenamento:</dt>
        <dd class="col-sm-9"><%= @food_item.storage_location || "Não especificado" %></dd>

        <dt class="col-sm-3">Status:</dt>
        <dd class="col-sm-9">
          <span class="badge <%= @food_item.status == :expired ? 'bg-danger' : @food_item.status == :expiring_soon ? 'bg-warning' : 'bg-success' %>">
            <%= @food_item.status.to_s.titleize %>
          </span>
        </dd>

        <% if @food_item.notes.present? %>
          <dt class="col-sm-3">Notas:</dt>
          <dd class="col-sm-9"><%= simple_format @food_item.notes %></dd>
        <% end %>
      </dl>
    </div>
  </div>
</div>

